<div class="post_wrapper">
  <div class="post_wrapper__content">
    <div class="post_wrapper__content__post_form">
      <h3>投稿編集</h3>
      <%= form_with model: @post, local: true do |f| %>
        <div class="form_area">
        <%= render 'layouts/error_messages', model: f.object %>
          <div class="form_area__field">
            <%= f.text_area :content, rows: 10, autofocus: true, autocomplete: "content", placeholder: "投稿内容を入力" %>
          </div>
        </div>
        <div class="form_area">
          <div class="form_area__action">
            <%= f.submit "投稿", class: "form_area__action__btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>